<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">


    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container py-5" id="content">


                <div class="col-md-12 mx-auto">
                    <% if (confirmCreation) { %>
                        <div class=row>
                            <div class="col-12">
                                <div class="user-message user-message--topic--created">
                                    Topic <%=confirmCreation%> was created
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <div class="row">
                                <div class="col-12">
                                    <h2>List of Topics</h2>
                                </div>
                            </div>
                            <%if (!isAdmin) {%>
                                <div class="row lead border-bottom">
                                    <div class="col-4">
                                        Topic name
                                    </div>
                                    <div class="col-4">
                                        Topic ID
                                    </div>
                                    <div class="col-4">
                                        Topic content
                                    </div>
                                </div>
                                <%} else {%>
                                    <div class="row lead border-bottom">
                                        <div class="col-3">
                                            Topic name
                                        </div>
                                        <div class="col-3">
                                            Topic ID
                                        </div>
                                        <div class="col-3">
                                            Author ID
                                        </div>
                                        <div class="col-3">
                                            Topic content
                                        </div>
                                    </div>
                                    <%}%>
                                        <%for (const i in topics) { if (!isAdmin) { %>
                                            <div class="row">
                                                <div class="col-4">
                                                    <%=topics[i].name%>
                                                </div>
                                                <div class="col-4">
                                                    <%=topics[i].topicId%>
                                                </div>
                                                <div class="col-4">
                                                    <a href="/author/topic/<%=topics[i].id%>">
                                                        Content
                                                    </a>
                                                </div>
                                            </div>
                                            <%} else {%>
                                                <div class="row">
                                                    <div class="col-3">
                                                        <%=topics[i].name%>
                                                    </div>
                                                    <div class="col-3">
                                                        <%=topics[i].topicId%>
                                                    </div>
                                                    <div class="col-3">
                                                        <%=topics[i].userId%>
                                                    </div>
                                                    <div class="col-3">
                                                        <a href="/author/topic/<%=topics[i].id%>">
                                                            Content
                                                        </a>
                                                    </div>
                                                </div>
                                                <%}}%>
                </div>

            </div>
            <%- include('../includes/end.ejs') %>