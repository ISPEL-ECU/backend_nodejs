<%- include('../includes/head.ejs') %>

    <script>
        function validationPassword() {
            let passwordInput = document.getElementById("password");
            let passwordConfirmInput = document.getElementById("confirmPassword");
            if (passwordInput.value !== passwordConfirmInput.value) {
                passwordInput.style.borderColor = "red";
                passwordConfirmInput.style.borderColor = "red";
                document.getElementById("button").disabled = true;
            } else {
                passwordInput.style.borderColor = "black";
                passwordConfirmInput.style.borderColor = "black";
                document.getElementById("button").disabled = false;
            }
        }
    </script>

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <div class="container">

                <% if (errors) { %>
                    <div class = "row">
                        <%for (const i in errors) { %>
                        <div class="user-message user-message--error">
                            <%= errors[i].msg %>
                        </div>
                        <% } %>
                    </div>
                    <% } %>

                        <div class="row">
                            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                                <div class="card card-signin my-5">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Sign Up</h5>
                                        <form class="form-signin" method="POST" action="/auth/signup"
                                            enctype="multipart/form-data">
                                            <div class="form-label-group">
                                                <label for="firstName">First Name</label>
                                                <input type="text" name="firstName" id="firstName" class="form-control" value="<%=oldInput.firstName%>"
                                                    required autofocus>

                                            </div>
                                            <div class="form-label-group">
                                                <label for="lastName">Last Name</label>
                                                <input type="text" name="lastName" id="lastName" class="form-control" value="<%=oldInput.lastName%>"
                                                    required autofocus>

                                            </div>
                                            <div class="form-label-group">
                                                <label for="email">Email address</label>
                                                <input type="email" name="email" id="email" class="form-control" value="<%=oldInput.email%>"
                                                    required autofocus>

                                            </div>

                                            <div class="form-label-group">
                                                <label for="password">Password</label>
                                                <input type="password" id="password" name="password"
                                                    class="form-control" onkeyup="validationPassword()"  value="<%=oldInput.password%>" required> 
                                            </div>

                                            <div class="form-label-group">
                                                <label for="confirmPassword">Confirm Password</label>
                                                <input type="password" id="confirmPassword" name="confirmPassword" value="<%=oldInput.confirmPassword%>"
                                                    class="form-control" onkeyup="validationPassword()" required>
                                            </div>

                                            <div class="custom-control custom-checkbox mb-3">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">Remember
                                                    password|
                                                    TO-DO</label>
                                            </div>
                                            <button id="button" class="btn btn-lg btn-primary btn-block text-uppercase"
                                                type="submit">Sign
                                                in</button>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>

            <%- include('../includes/end.ejs') %>